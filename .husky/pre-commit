#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run type checking
echo "📊 Type checking..."
npm run type-check

# Run linting
echo "🔍 Linting..."
npm run lint

# Run tests
echo "🧪 Running tests..."
npm run test -- --passWithNoTests

# Run format check
echo "🎨 Checking formatting..."
npm run format:check

echo "✅ Pre-commit checks completed!"
